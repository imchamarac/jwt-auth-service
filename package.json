{
  "name": "jwt-auth-service",
  "version": "1.0.0",
  "description": "Authentication service with JWT",
  "main": "server.ts",
  "author": "Chamara Chathuranga",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "yarn prebuild & nodemon",
    "dev:watch": "tsc-watch --onSuccess \"node ./dist/src/server.js\"",
    "dev:debug": "yarn dev & nodemon --inspect-brk ./src/server.ts",
    "prebuild": "yarn migrate & yarn openapi-gen",
    "build": "yarn prebuild & tsc --outDir dist",
    "start": "NODE_ENV=production node ./dist/src/server.js",
    "lint": "eslint ./src --ext .js,.ts",
    "lint:fix": "yarn run lint --fix",
    "prettier": "npx prettier src/ --check",
    "prettier:fix": "yarn run prettier -- --write",
    "test:units": "NODE_ENV=test jest --runInBand --detectOpenHandles -c jest.config.unit.ts",
    "test:integration": "NODE_ENV=test jest --forceExit -c jest.config.integration.ts",
    "test:e2e": "yarn run dev & npx cypress open",
    "openapi-gen": "yarn redocly bundle ./docs/base.yaml --o  ./src/docs/openapi --ext json",
    "migrate": "db-migrate up"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "express-ejs-layouts": "^2.5.1",
    "express-flash": "^0.0.2",
    "express-session": "^1.17.3",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.11.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@redocly/cli": "^1.7.0",
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-ejs-layouts": "^2.5.4",
    "@types/express-flash": "^0.0.5",
    "@types/express-session": "^1.17.10",
    "@types/jest": "^29.5.11",
    "@types/morgan": "^1.9.9",
    "@types/passport": "^1.0.16",
    "@types/passport-jwt": "^3.0.13",
    "@types/pg": "^8.10.9",
    "@types/supertest": "^6.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "cypress": "^13.6.2",
    "db-migrate": "^0.11.14",
    "db-migrate-pg": "^1.5.2",
    "eslint": "^8.55.0",
    "eslint-plugin-cypress": "^2.15.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  },
  "engines": {
    "npm": ">=8.0.0",
    "node": ">=18.0.0"
  }
}